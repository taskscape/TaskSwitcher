<Window x:Class="TaskSwitcher.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskSwitcher Options" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        ShowInTaskbar="False" WindowStyle="ToolWindow" Background="{x:Static SystemColors.WindowBrush}" Height="430"
        MaxWidth="350">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5,5,5,5">
            <CheckBox Name="HotKeyCheckBox" Margin="5,5,5,1" Checked="HotKeyCheckBox_Checked" Unchecked="HotKeyCheckBox_OnUnchecked">Activate TaskSwitcher with this shortcut:</CheckBox>
            <TextBox Name="HotkeyPreview" Margin="25,5,0,10"
                     PreviewKeyDown="HotkeyPreview_OnPreviewKeyDown"
                     GotFocus="HotkeyPreview_OnGotFocus"
                     LostFocus="HotkeyPreview_OnLostFocus"
                     Width="150"
                     HorizontalAlignment="Left"/>
            <CheckBox Name="AltTabCheckBox" Checked="AltTabCheckBox_OnChecked" Unchecked="AltTabCheckBox_OnUnchecked" Margin="5,5,5,1">Activate TaskSwitcher with Alt+Tab</CheckBox>
            <TextBlock Margin="25,0,5,10" FontSize="10" Foreground="DimGray" TextWrapping="Wrap">
                Use TaskSwitcher instead of the integrated task switcher in Windows.
            </TextBlock>
            <CheckBox Name="AutoSwitch" Margin="5,5,5,1">Automatically switch window when releasing Alt + Tab</CheckBox>
            <TextBlock Margin="25,0,5,10" FontSize="10" Foreground="DimGray" TextWrapping="Wrap">
                Faster and more native-like swiching between windows.<LineBreak />
                <LineBreak />
                Use <Span FontFamily="Consolas" FontWeight="Bold">Ctrl + Alt + Tab</Span> for displaying TaskSwitcher with search activated, or
                press <Span FontFamily="Consolas" FontWeight="Bold">Alt + S</Span> when the TaskSwitcher overlay appears.
            </TextBlock>
            <CheckBox Name="IncludeBrowserTabs" Margin="5,5,5,1">Include browser tabs in window list</CheckBox>
            <TextBlock Margin="25,0,5,10" FontSize="10" Foreground="DimGray" TextWrapping="Wrap">
                Shows Chrome browser tabs as separate entries in the window list, allowing quick switching between tabs.
            </TextBlock>
            
            <CheckBox Name="UseAdvancedTabDetection" Margin="25,0,5,1">Use advanced Chrome tab detection</CheckBox>
            <TextBlock Margin="45,0,5,10" FontSize="10" Foreground="DimGray" TextWrapping="Wrap">
                Tries additional methods to detect tabs, including keyboard simulation.<LineBreak />
                Disable this if tab detection causes issues with Chrome.
            </TextBlock>
            <CheckBox x:Name="RunAsAdministrator" Margin="5,5,5,1" Content="Run as Administrator *"/>
            <TextBlock Margin="25,0,5,10" FontSize="10" Foreground="DimGray" TextWrapping="Wrap">
                This is needed if you want <Span FontFamily="Consolas" FontWeight="Bold">Alt + Tab</Span> to work when programs
                running with higher privileges than your user account are in focus.<LineBreak />
                <LineBreak />
                <Italic>* Requires a restart of TaskSwitcher</Italic>
            </TextBlock>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Name="Ok" Width="60" Click="Ok_Click" IsDefault="True" Margin="0,0,5,0" Grid.Column="0">OK</Button>
                <Button Name="Cancel" Width="60" Click="Cancel_Click" IsCancel="True" Margin="5,0,0,0" Grid.Column="1">Cancel</Button>
            </Grid>
        </StackPanel>
    </Grid>

</Window>